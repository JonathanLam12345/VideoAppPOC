    .field-validation-error{
        color:red;
    }
    #log{
        border:2px solid #fff; padding: 60px 40px; margin-top: 80px;
        -webkit-box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
        -moz-box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
        box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
    }
  
</style>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
@using (Html.BeginForm("Login", "Home", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
{
    <body>
       
        <div class="container-fluid bg" >
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div id="log">
                        <h1>videoAppPoc Login Form</h1>
                        <div class="form-group">
                            <label for="inputUserName">Enter User Name</label>
                            <input class="form-control" id="exampleInputEmail" @Html.TextBoxFor(a => a.userName)
                            <label>@Html.ValidationMessageFor(a => a.userName)</label>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Enter password</label>
                            <input type="password" class="form-control" id="exampleInputPassword" @Html.TextBoxFor(a => a.password)
                            <label class="field-validation-error">
                                @Html.DisplayFor(a => a.LoginErrorMessage)
                            </label>
                            <label>@Html.ValidationMessageFor(a => a.password)</label>
                        </div>
                        <div>
                            <label>
                                <input type="checkbox" /> remember me
                            </label>
                        </div>              
                          
                        
                        <button type="submit" class="btn btn-success btn-block" >Submit</button>
                        <button type="submit" class="btn btn-success btn-block">register</button>
                    </div>
            </div>
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
            </div>
    </body>


}
